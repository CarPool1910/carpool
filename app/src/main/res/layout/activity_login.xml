<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f78844"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:text="Fill the details to Log in to CarPoolTrial2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textFontWeight="1"
            android:textSize="20sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txtMail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_mail"
            android:text=" Mail ID"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textFontWeight="1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etMail"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_border"
            android:ellipsize="end"
            android:hint="  Enter your mail"
            android:inputType="textEmailAddress" />


        <TextView
            android:id="@+id/txtPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/ic_pswd"
            android:text=" Password"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textFontWeight="1"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etPs"
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_border"
            android:ellipsize="end"
            android:hint="  Enter your password"
            android:inputType="textPassword" />



        <Button
            android:id="@+id/btnSignin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:onClick="SignIn"
            android:text="Log In"
            android:tooltipText="Click to Register" />



    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />



    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="resetPswd"
        android:text="Forget Password?"
        android:textFontWeight="1"
        android:textSize="15sp"
        android:textStyle="italic" />


    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:onClick="goToSignIn"
        android:text="Don't have an account?\n Tap to SignIn"
        android:textFontWeight="1"
        android:textSize="15sp"
        android:textStyle="italic" />

</LinearLayout>